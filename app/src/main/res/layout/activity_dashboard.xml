<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.activities.DashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statusBarLayout"
        android:gravity="start">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo"/>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/status_fragment"
        android:name="tel.skylab.skylabtel.linphone.fragments.StatusBarFragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        tools:layout="@layout/status_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_below="@id/status_fragment"
        android:id="@+id/tob_bar"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:id="@+id/iv_keypad_btn"
            android:src="@drawable/unselect_keypad"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/iv_select_keypad_btn"
            android:src="@drawable/select_keypad"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:id="@+id/iv_recent_contact_btn"
            android:src="@drawable/unselect_resent"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:id="@+id/iv_select_recent_contact_btn"
            android:visibility="gone"
            android:src="@drawable/resent_history"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:id="@+id/iv_chat_btn"
            android:src="@drawable/unselect_chat_message"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/iv_select_chat_btn"
            android:src="@drawable/select_chat_message"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:id="@+id/iv_contact_btn"
            android:src="@drawable/unselect_contact"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/iv_select_contact_btn"
            android:src="@drawable/select_contact"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tob_bar"
        android:layout_marginTop="10dp"
        android:id="@+id/main_frame"
        android:layout_marginBottom="65dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_corner_white_top"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/setting_btn"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/setting"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="@string/setting"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:text="@string/home"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:id="@+id/profile_btn"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/profile"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="@string/profile"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_color="@color/colorBackground"
            app:civ_border_width="6dp"
            android:id="@+id/iv_home_btn"
            android:src="@drawable/home"/>
    </LinearLayout>

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>