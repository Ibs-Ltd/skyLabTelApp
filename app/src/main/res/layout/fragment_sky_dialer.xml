<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SkyDialerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/vwDialPadWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="0dp"
                android:elevation="0dp"
                android:scrollbars="vertical"
                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textColor="@color/colorText"
                            android:textSize="20sp"
                            android:backgroundTint="@color/colorBackground"
                            android:layout_marginStart="8dp"
                            android:padding="2dp"
                            android:textAlignment="viewEnd"
                            android:textColorHint="@color/colorTextHint"
                            android:hint="@string/enter_a_number"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/tvErase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/cross" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorTextHint" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                       <TextView
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:textSize="25sp"
                           android:padding="12dp"
                           android:id="@+id/tvOne"
                           android:textStyle="bold"
                           android:gravity="center"
                           android:background="@drawable/circle_shape"
                           android:textColor="@color/colorText"
                           android:textAlignment="center"
                           android:text="@string/one"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:id="@+id/tvTwo"
                            android:padding="12dp"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/two"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:id="@+id/tvThree"
                            android:padding="12dp"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/three"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:id="@+id/tvFour"
                            android:textStyle="bold"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/four"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:id="@+id/tvFive"
                            android:textStyle="bold"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/five"/>
                        </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:id="@+id/tvSix"
                            android:textStyle="bold"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/six"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:id="@+id/tvSeven"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/seven"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:id="@+id/tvEight"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/eight"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:id="@+id/tvNine"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/nine"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:id="@+id/tvStar"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="@string/star"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:id="@+id/tvZero"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/zero"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:textSize="25sp"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:id="@+id/tvHash"
                            android:background="@drawable/circle_shape"
                            android:textColor="@color/colorText"
                            android:textAlignment="center"
                            android:text="@string/hash"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/iv_add_person"
                            android:src="@drawable/contact_dialer"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:id="@+id/iv_call_btn"
                            android:src="@drawable/call_button"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/iv_message"
                            android:src="@drawable/message_dialer"/>


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>