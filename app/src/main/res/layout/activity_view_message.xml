<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.activities.ViewMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBtnText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back"
                    android:padding="5dp"
                    android:id="@+id/back_btn"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Messages"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/border_corner_white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: "
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorBtnText"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextHint"
                    android:textColor="@color/colorText"
                    android:id="@+id/et_from_number"
                    android:backgroundTint="@color/transparent_color"
                    android:textSize="16sp"
                    android:padding="5dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:id="@+id/tv_message"
                android:padding="15dp"
                android:gravity="start"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"/>



            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="@string/send"
                android:id="@+id/tv_send_btn"
                android:padding="15dp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_corner"
                android:layout_gravity="end|center_horizontal"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>